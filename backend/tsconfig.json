{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "lib": [
            "es2020"
        ],
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./",
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "include": [
        "server.ts",
        "**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}